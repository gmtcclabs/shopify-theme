<section class="hero">
  <div class="container">
    <h1>{{ section.settings.title }}</h1>
    <p>{{ section.settings.subtitle }}</p>
    <div class="hero-actions">
      <a href="{{ section.settings.primary_button_link }}" class="btn">
        {{ section.settings.primary_button_text }}
      </a>
      <a href="{{ section.settings.secondary_button_link }}" class="btn btn-secondary">
        {{ section.settings.secondary_button_text }}
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Transform Your Gut Health Journey"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Discover personalized insights with our comprehensive gut microbiome testing and expert-guided health solutions."
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Shop Tests"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
