<section class="hero-modern">
  <div class="hero-bg-shapes">
    <div class="shape shape-1"></div>
    <div class="shape shape-2"></div>
    <div class="shape shape-3"></div>
  </div>
  <div class="container">
    <div class="hero-content">
      <div class="hero-badge">Research-Driven Precision Wellness</div>
      <h1 class="hero-title">
        The Gut Health Blueprint:<br>
        <span class="hero-subtitle">Clinical Data Meets Personalized, Ongoing Care.</span>
      </h1>
      <p class="hero-description">
        We operate at the intersection of microbiology and functional wellness. Start with the gut to build your tailor-made roadmap.
      </p>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Transform Your Gut Health Journey"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Discover personalized insights with our comprehensive gut microbiome testing and expert-guided health solutions."
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Shop Tests"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
